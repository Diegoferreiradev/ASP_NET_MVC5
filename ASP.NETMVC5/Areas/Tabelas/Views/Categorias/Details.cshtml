@model Modelo.Tabelas.Categoria

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Detalhes da Categoria";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Detalhes da Categoria
    </div>
    <div class="panel-body">
        @Html.LabelFor(model => model.Nome)
        <br />
        <div class="input-group">
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-user"></i>
            </span>
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
        </div>
    </div>
    <div class="panel-footer panel-info">
        @Html.ActionLink("Editar", "Edit", new { id = Model.CategoriaId }, new { @class = "btn btn-info" })
        @Html.ActionLink("Retornar para a Categoria", "Index", null, new { @class = "btn btn-info" })
    </div>
</div>

